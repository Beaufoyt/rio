{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
        "strict": 0,
        "max-len": [1, 120, 2, {
            "ignoreComments": true
        }],
        "react/jsx-indent": [4, 4],
        "react/jsx-indent-props": [4, 4],
        "no-console": 0,
        "new-cap": 0,
        "no-undef": [2],
        "indent": ["error", 4],
        "arrow-body-style": 0,
        react/jsx-closing-bracket-location: 0,
        react/jsx-space-before-closing: 0,
        react/jsx-no-bind: 0,
        prefer-template: 0,
        class-methods-use-this: 0,
        linebreak-style: 0,
        array-callback-return: 0,
        import/prefer-default-export: 0,
    },
    "env": {
        "browser": true
    }
}
